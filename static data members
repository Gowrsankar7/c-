#include<iostream>
using namespace std;

class player
{private:
    char name[5];
    int age,runs;
    static char team[10];
     public:
     void getdata()
     {
         cout<<"enter name;"<<endl;
         cin>>name;
         cout<<"enter age and runs:"<<endl;
         cin>>age>>runs;
         
     }
     void display();
};
 void player::display()
 {
     cout<<"nameof player is:"<<name<<endl;
     cout<<"age and runs of the player:"<<age<<"\t"<<runs<<endl;
     
 }
 char player::team[10]="INDIA";
 
 
 int main()
 {
     player MSD,VK,RS;
     MSD.getdata();
     MSD.display();
     VK.getdata();
     VK.display();
     RS.getdata();
     RS.display();
